# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=ap-southeast-1
S3_BUCKET_NAME=your_s3_bucket_name
S3_PREFIX=prod

# Authentication Configuration
COOKIE_NAME=leetdash_auth
COOKIE_KEY=your_random_signature_key_here
COOKIE_EXPIRY_DAYS=30

# Admin Credentials (default - change in production!)
ADMIN_EMAIL=admin@leetcode-dashboard.local
ADMIN_NAME=Administrator
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password_here

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Scheduler Configuration
RUN_ON_STARTUP=false
ENVIRONMENT=production
