# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.production and update with your actual values
# Then use: docker-compose -f docker-compose.fullstack.yml --env-file .env.production up -d

# ===========================================
# AWS S3 STORAGE CONFIGURATION
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_DEFAULT_REGION=ap-southeast-1
S3_BUCKET_NAME=your-bucket-name
S3_PREFIX=prod

# ===========================================
# SECURITY (REQUIRED FOR FASTAPI BACKEND)
# ===========================================
# JWT token signing key - KEEP THIS SECRET!
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-generate-a-new-one

# ===========================================
# FASTAPI APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=production
LOG_LEVEL=info

# ===========================================
# CORS CONFIGURATION FOR PRODUCTION
# ===========================================
# Include both HTTP and HTTPS for your domain
# Include localhost for local testing if needed
CORS_ORIGINS=https://quangtringuyen.cloud,https://leetcode.quangtringuyen.cloud,http://quangtringuyen.cloud,http://localhost:3000,http://localhost:8090

# JWT Token expiration time in minutes (10080 = 7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===========================================
# FRONTEND API URL CONFIGURATION
# ===========================================
# This is the URL the frontend will use to call the backend API
# IMPORTANT: Use HTTPS in production!
VITE_API_URL=https://leetcode.quangtringuyen.cloud/api

# ===========================================
# SCHEDULER CONFIGURATION
# ===========================================
RUN_ON_STARTUP=false
