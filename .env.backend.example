# ===========================================
# SECURITY (REQUIRED)
# ===========================================
# Generate a secure random key for JWT token signing
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-random-secret-key-change-in-production-REQUIRED

# ===========================================
# AWS S3 STORAGE (OPTIONAL)
# ===========================================
# Leave empty to use local file storage instead
# If using S3, fill in all AWS credentials below
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
S3_BUCKET_NAME=
S3_PREFIX=prod

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=production

# CORS Origins (comma-separated list of allowed origins)
# Add your frontend URL here when deploying
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT Token expiration time in minutes
# Default: 10080 minutes = 7 days
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===========================================
# SCHEDULER CONFIGURATION
# ===========================================
# Run snapshot on startup (true/false)
RUN_ON_STARTUP=false

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info

# ===========================================
# FILE PATHS (Optional - defaults work for Docker)
# ===========================================
# USERS_FILE=data/users.json
# MEMBERS_FILE=data/members.json
# HISTORY_FILE=data/history.json
# SNAPSHOTS_FILE=data/snapshots.json
